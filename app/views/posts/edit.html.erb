<h1>Edit Your Content</h1>
<div class="form-group">
  <%= form_for @post, remote: true do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title, class:"form-control", id:"formGroupExampleInput" %>
  <br/>
  <%= f.label :content %>
  <%= f.text_area :content, class:"form-control", id:"formGroupExampleInput" %>
  <br/>
  <%= f.submit "Edit Content!" %>
  <% end %>
</div>
<%= link_to "Back", user_post_path(@post.user, @post.id) %>